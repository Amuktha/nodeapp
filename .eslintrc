{
  "extends" : [
    "standard"
  ],
  "plugins": [
    "promise",
    "standard"
  ],
"env"     : {
    "mocha" : true
  },
  "globals" : {
    "expect" : false,
    "should" : false,
    "sinon"  : false
  },
  "rules": {
    "semi" : [2, "never"],
    "max-len": [2, 220, 2],
    "padded-blocks": 0,
    "space-before-function-paren": 0,
    "no-trailing-spaces": [2, { "skipBlankLines": true }],
    "brace-style": [2, "stroustrup"],
    "generator-star-spacing": 0,
    "promise/param-names": 2,
    "promise/always-return": 2,
    "promise/catch-or-return": 2,
    "promise/no-native": 0
  }
}
